<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Document</title>
</head>
<body>

<div class="container" id="orderContainer orderPage">	
	<h3>Orders</h3>
	{{#if orders }}
	<h4>Pending Orders:</h4>
	<ul id="order-list" class="order-list list-group">
		{{#each orders }}
		{{#unless this.completed }}
		<li data-id="{{this.id}}" class="list-group-item">
			<span>{{ this.Employee.name }}  {{this.Employee.lastName}}</span> | 
			<span>{{ this.order }}</span> | 
			<span>{{ this.comments }}</span> | 
			<span>{{ this.Employee.department }}</span>
			<a class="btn-floating btn-small fulfill"><i class="material-icons">clear</i></a>
		</li>
		{{/unless }}
		{{/each }}
	</ul>
	<h4>Completed Orders:</h4>
	<ul class="order-list list-group">
	{{#each orders }}
		{{#if this.completed }}
		<li data-id="{{this.id}}" class="list-group-item">
			<span>{{ this.Employee.name }}</span> |  
			<span>{{ this.order }}</span> | 
			<span>{{ this.comments }}</span> | 
			<span>{{ this.Employee.department }}</span>
			<a class="btn-floating btn-small delete"><i class="material-icons">clear</i></a>
		</li>
		{{/if }}
	{{/each }}
	</ul>
	{{else }}
	<p>No Orders To display! <a href="orders/create">Create Order!</a></p>
	{{/if }}
</div>
	

</body>
</html>