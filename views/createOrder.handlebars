<div class="conatiner">
    <h1>Create New Order</h1>
    <form class="clearfix mb-4" action="../api/orders" method="POST" id="createOrder">

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" class="form-control" aria-describedby="name" placeholder="John Doe">
        </div>

        <div class="form-group">
            <label for="order">Order</label>
            <input type="text" id="order" name="order" class="form-control" aria-describedby="order" placeholder="Mocha Latte">
        </div>

        <div class="form-group">
            <label for="comments">Comments</label>
            <textarea class="form-control" id="comments" name="comments" aria-describedby="comments" placeholder="2 Sugars"></textarea>
        </div>

        <div class="form-group">
            <label for="depts">Departments</label>
            <select name="department" id="depts">
                <option value="" disabled>Please select a Department</option>
                <option value="Accounting">Accounting</option>
                <option value="Software Engineer">Engineer</option>
            </select>
        </div>

        <button id="submit" class="btn btn-primary float-right">Submit</button>

    </form>
</div>